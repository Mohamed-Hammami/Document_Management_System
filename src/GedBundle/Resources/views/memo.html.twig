                        <button type="button" class="btn btn-box-tool" id="save_memo">
                            <i class="fa fa-fw fa-save"></i>
                        </button>
                    </div>
                    <!-- /. tools -->
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <form>
                        <textarea id="memo" class="form-control" rows="3" placeholder="Enter your notes here..." style="font-size: 12px; line-height: 12px; font-style: italic;">{% if app.session.get('memo') is not null %}{{ app.session.get('memo') }}{% endif %}</textarea>
