
{% block file_permission_add %}
    <form action="{{ path('file_permission_add', {id: file.id}) }}" method="post"{{ form_enctype(form) }}>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;<span class="sr-only">Close</span></button>
            <h4 class="modal-title" id="myModalLabel">Add New Permission</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <div>{{ form_label(form.groupe) }}</div>
                  {{ form_errors(form.groupe) }}
                <div>{{ form_widget(form.groupe) }}</div>
            </div>
            <div class="form-group">
                {{ form_label(form.level) }}
                {{ form_errors(form.level) }}
                {{ form_widget(form.level) }}
            </div>
        </div>
        <div class="modal-footer">
            <div class="pull-left">
                {{ form_widget(form.confirm) }}
            </div>
            <div class="pull-right">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div>
        {{ form_rest(form) }}
    </form>
{% endblock %}
