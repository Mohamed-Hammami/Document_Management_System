
<div class="col-xs-12">
    <div class="row">
        <div>
        {% block groups_list %}
            <div class="box">
                {% if permissions|length > 0 %}
                    <div class="box-header">
                        <h3 class="box-title">Permissions</h3>
                        <div  class = "pull-right">
                            <span class="progress-description">
                                {#I need to add security control#}
                                <a data-toggle="modal" data-target="#permissionAdd" class="sonata-action-element"
                                   href="{{ path('file_permission_add', {id: file.id}) }}">
                                    <i class="fa fa-plus-circle"></i>
                                    Add new
                                </a>
                            </span>
                        </div>

                    </div>
                    <div class="box-body no-padding">
                        <table id="permissions" class="table table-condensed">
                            <tbody>
                            <tr>
                                <th>Name</th>
                                <th>Label</th>
                                <th>Access level</th>
                                <th></th>
                            </tr>
                            {% for permission in  permissions %}
                                <tr id="{{ permission.id }}" level="{{ permission.level }}">
                                    <th>{{ permission.groupe.name}}</th>
                                    <th>{{ permission.groupe.label}}</th>
                                    <th>
                                        <div class="btn-group">
                                            <button class="btn btn-default minus-button"><i class="fa fa-minus-circle"></i></button>
                                            <button class="btn btn-default" style="width: 2cm">
                                            {% if permission.level == 0 %}
                                                Control
                                            {% elseif permission.level == 1 %}
                                                Edit
                                            {% elseif permission.level == 2 %}
                                                View
                                            {% endif %}
                                            </button>
                                            <button class="btn btn-default plus-button"><i class="fa fa-plus-circle"></i></button>
                                        </div>
                                    </th>
                                    <th>
                                       <button class="btn btn-default remove-permission"><span class="glyphicon glyphicon-trash"></span></button>
                                    </th>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="box-footer">
                    </div>
                {% else %}
                    <div class="box-body">
                        <div class="info-box">
                            <span class="info-box-icon bg-aqua"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="info-box-content">
                                <span class="info-box-text">{{ 'NO PERMISSIONS' }}</span>
                                <div class="progress">
                                    <div class="progress-bar" style="width: 0%"></div>
                                </div>
                            <span class="progress-description">
                                {#I need to add security control#}
                                <a data-toggle="modal" data-target="#permissionAdd" class="sonata-action-element"
                                   href="{{ path('file_permission_add', {id: file.id}) }}">
                                    <i class="fa fa-plus-circle"></i>
                                    Add new
                                </a>
                            </span>
                            </div>
                        </div>
                    </div>
                {% endif %}

            </div>
        {% endblock %}
    </div>
</div>


{# Permission Add modal #}

<div id="permissionAdd" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add New Permission</h4>
            </div>
            <div class="modal-body">
                Loading...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>