{% extends 'GedBundle:CRUD:profile.html.twig' %}

{% block profile_content %}

    <style>
        dd, dt{

            margin-bottom: 5px;
        }

        img{
            max-width:  150px;
            max-height: 150px;
        }
    </style>


    <div class="col-xs-12" style="margin-top: 15px">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">
                    {% if owner %}
                        My information
                    {% else %}
                        User information
                    {% endif %}
                </h3>
            </div>
            <div class="box-body ">
                <div class="row">
                    <div class="col-xs-8">
                        <dl class="dl-horizontal">
                            <dt>Username</dt>
                            <dd>{{ user.username }}</dd>
                            <dt>Name</dt>
                            <dd>{{ user.name }}</dd>
                            <dt>Surname</dt>
                            <dd>{{ user.surName }}</dd>
                            <dt>Email address</dt>
                            <dd>{{ user.emailCanonical }}</dd>
                            <dt>Registration date</dt>
                            <dd>{{ user.registrationDate|date }}</dd>
                            <dt>Title or Post</dt>
                            {% if user.title %}
                                <dd>{{ user.title }}</dd>
                            {% else %}
                                <dd><span class="text-muted">No content</span></dd>
                            {% endif %}

                        </dl>
                    </div>
                    <div class="col-xs-4">
                        {{ macro.avatar(user.avatar, user.username) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}