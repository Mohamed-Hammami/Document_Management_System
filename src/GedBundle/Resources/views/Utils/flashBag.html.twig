{% block flashBag %}

    {% for flashMessage in flashbag.get('success')  %}
        <div class="alert alert-success alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <i class="icon fa fa-check"></i> {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in flashbag.get('warning')  %}
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <i class="icon fa fa-warning"></i> {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in flashbag.get('info')  %}
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
           <i class="icon fa fa-warning"></i> {{ flashMessage }}
        </div>
    {% endfor %}

    {% for flashMessage in flashbag.get('danger')  %}
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <i class="icon fa fa-ban"></i> {{ flashMessage }}
        </div>
    {% endfor %}

{% endblock %}